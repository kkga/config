#!/bin/sh

error() {
	echo >&2 "$*"
	exit 1
}

script_name=$(basename -- "$0")

if pidof -x "$script_name" -o $$ > /dev/null; then
	error "Another instance of this script is already running."
fi

[ $# -gt 0 ] || error "Usage: $script_name <inc|dec|set|get> [-d <device>] <amount> (e.g. $script_name inc 10)"

increase() {
	if ddcutil detect > /dev/null 2>&1; then
		if [ $# -gt 1 ]; then
			ddcutil -d "$1" setvcp 10 + "$2"
		else
			ddcutil setvcp 10 + "$1"
		fi
	else
		if [ $# -gt 1 ]; then
			brightnessctl -d "$1" set +"$2"%
		else
			brightnessctl set +"$1"%
		fi
	fi
}

decrease() {
	if ddcutil detect > /dev/null 2>&1; then
		if [ $# -gt 1 ]; then
			ddcutil -d "$1" setvcp 10 - "$2"
		else
			ddcutil setvcp 10 - "$1"
		fi
	else
		if [ $# -gt 1 ]; then
			brightnessctl -d "$1" set "$2"%-
		else
			brightnessctl set "$1"%-
		fi
	fi
}

get() {
	if ddcutil detect > /dev/null 2>&1; then
		if [ $# -gt 0 ]; then
			ddcutil -d "$1" getvcp 10 --brief | awk '{print $4}'
		else
			ddcutil getvcp 10 --brief | awk '{print $4}'
		fi
	else
		if [ $# -gt 0 ]; then
			brightnessctl -m -d "$1" | awk -F, '{print substr($4, 0, length($4)-1)}'
		else
			brightnessctl -m | awk -F, '{print substr($4, 0, length($4)-1)}'
		fi
	fi
}

sset() {
	if ddcutil detect > /dev/null 2>&1; then
		if [ $# -gt 1 ]; then
			ddcutil -d "$1" setvcp 10 "$2"
		else
			ddcutil setvcp 10 "$1"
		fi
	else
		if [ $# -gt 1 ]; then
			brightnessctl -d "$1" set "$2%"
		else
			brightnessctl set "$1%"
		fi
	fi
}

if [ "$1" = "-d" ]; then
	case "$3" in
		inc) increase "$2" "$4" ;;
		dec) decrease "$2" "$4" ;;
		set) sset "$2" "$4" ;;
		get) get "$2" ;;
	esac
else
	case "$1" in
		inc) increase "$2" ;;
		dec) decrease "$2" ;;
		set) sset "$2" ;;
		get) get ;;
	esac
fi
