#!/bin/sh
# web browser wrapper with some handy actions

menu=$(printf "\
firefox
firefox-nightly
qutebrowser
chromium
vimb
mpv
clipboard to mpv
copy to clipboard" |
	$DMENU)

case $menu in
	"firefox")
		firefox "$@" &
		;;
	"firefox-nightly")
		"$HOME/.local/bin/firefox-nightly/firefox" "$@" &
		;;
	"qutebrowser")
		qutebrowser "$@" &
		;;
	"chromium")
		chromium-wayland "$@" &
		;;
	"vimb")
		vimb "$@" &
		;;
	"mpv")
		mpv "$@" &
		;;
	"copy to clipboard")
		echo "$@" | wl-copy
		;;
	"clipboard to mpv")
		mpv "$(wl-paste)" &
		;;
esac
