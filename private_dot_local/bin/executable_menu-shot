#!/bin/sh
# Use grimshot to take a screenshot and upload to 0x0.st

screenshot=$(
	printf "window\noutput\narea" | $DMENU
)

action=$(
	printf "copy\nsave\nupload" | $DMENU
)

case "$action" in
	copy)
		grimshot --notify copy "$screenshot"
		;;
	save)
		grimshot --notify save "$screenshot" ~/pictures/"$(date +'%Y-%m-%d-%H%M%S')".png
		term-popup lf "$HOME/pictures/"
		;;
	upload)
		grimshot save "$screenshot" /tmp/screenshot.png
		share /tmp/screenshot.png
		;;
esac
